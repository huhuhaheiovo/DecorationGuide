/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  color: #FFFFFF;
  padding: 0 40rpx;
  width: 100%;
} 
.h1_title{
  margin-top: 10%;
  margin-left: 5%;
}
.h1_title_font{
  color: #CDE7BE;
  font-size: 25px;
  font-family: 'Gotham';
  font-style: normal;
}
.h2_title{
  margin-top: 5%;
  margin-left: 3%;
}
.h2_title_font{
  color: #CDE7BE;
  font-size: 20px;
  font-family: 'Gotham';
  font-style: normal;
}
.trial {
  background: linear-gradient(135deg, #CDE7BE 0%, #a4b998 100%);
  padding: 32rpx 40rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(205, 231, 190, 0.2);
  position: relative;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  min-height: 120rpx;
}

.trial::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.trial:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(205, 231, 190, 0.1);
}

.trial:active::after {
  opacity: 1;
}

.trial-text {
  color: #181919;
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  white-space: nowrap;
}

.trial-icon {
  color: #181919;
  font-size: 36rpx;
  font-weight: 600;
  margin-left: 24rpx;
  transition: transform 0.3s ease;
  flex-shrink: 0;
}

.trial:active .trial-icon {
  transform: translateX(8rpx);
}

.trial_font {
  display: none;
}

.knowledge_point{
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.knowledge_point_div{
  width: 300px;
  border: 3px solid #CDE7BE;
  border-radius: 15rpx;
  display: flex;
  margin-top: 5%;
  background-color: #2d3047;
}
.knowledge_point_div_font{
  color: white;
  font-size: 16px;
  font-family: 'Gotham';
  font-style: normal;
}
/* 添加联系设计师按钮样式 */
.contact-designer {
  width: 300px;
  height: 80px;
  background-color: rgba(205, 231, 190, 0.1);
  border: 2px solid #CDE7BE;
  border-radius: 15rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  transition: all 0.3s ease;
}

.designer-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}

.contact-text {
  color: #CDE7BE;
  font-size: 32rpx;
  font-weight: 500;
}

.contact-designer:active {
  opacity: 0.8;
  transform: scale(0.98);
}

