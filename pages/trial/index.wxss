/* pages/trial/index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #181919;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  color: #FFFFFF;
}

.h1_title {
  margin-top: 10%;
  margin-left: 5%;
}

.h1_title_font {
  color: #CDE7BE;
  font-size: 25px;
  font-family: 'Gotham';
  font-style: normal;
}
.h4_title_font {
  color: #CDE7BE;
  font-size: 15px;
  font-family: 'Gotham';
  font-style: normal;
}


.weui-input {
  color: #FFFFFF;
  border: 2px solid #CDE7BE;
  border-radius: 15rpx;
  padding: 5rpx;
  width: 300px;
  height: 48px;
  box-sizing: border-box;
  margin-top: 1%;
}
.weui-input-yt {
  color: #FFFFFF;
  border: 2px solid #CDE7BE;
  border-radius: 10rpx;
  padding: 5rpx;
  width: 35%;
  height: 48px;
  box-sizing: border-box;
  margin-top: 1%;
}


.weui_input_placeholder_class{
  color: #79767c;
  padding-left: 5px;
}

.page-body {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.cell__bd {
  border: 1px solid white;
}
.next_page{
  color: black;
  border: 3px solid #CDE7BE;
  width: 101px;
  height: 40px;  
  display: flex;
  justify-content:center;
  align-items: center;
  margin-top: 10%;
  background-color: #CDE7BE;
  border-radius: 10rpx;
}
.next_page_font{
  font-size: 40px;
  font-weight: bold;
  margin: auto  40px;
}


.example-image {
  width: 300rpx;
  height: 300rpx;
  border: 1px solid #ccc;
}
.call-word{
  font-size: 12px;
  font-weight: bold;
  color: #008b28;
}
.error_input_style{
  font-size: 12px;
  font-weight: bold;
  color: red;
}

.form-item {
  margin: 24rpx 32rpx;
  padding: 24rpx;
  background: rgba(205, 231, 190, 0.05);
  border-radius: 12rpx;
}

.form-label {
  font-size: 30rpx;
  color: #CDE7BE;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 32rpx;
  border: 2px solid #CDE7BE;
  border-radius: 8rpx;
  background: rgba(205, 231, 190, 0.1);
  color: #FFFFFF;
  box-sizing: border-box;
  font-size: 32rpx;
}

.form-input-half {
  width: 47%;
  height: 88rpx;
  padding: 0 32rpx;
  border: 2px solid #CDE7BE;
  border-radius: 8rpx;
  background: rgba(205, 231, 190, 0.1);
  color: #FFFFFF;
  margin-right: 3%;
  font-size: 32rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #008b28;
  margin-top: 16rpx;
  padding-left: 8rpx;
}

.error-text {
  font-size: 26rpx;
  color: #ff4d4f;
  margin-top: 12rpx;
  padding-left: 8rpx;
}

.navigation-buttons {
  display: flex;
  justify-content: space-between;
  padding: 32rpx;
  margin-top: 40rpx;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
}

.nav-button {
  font-size: 48rpx;
  color: #CDE7BE;
  padding: 20rpx 60rpx;
  background: rgba(205, 231, 190, 0.1);
  border: 2px solid #CDE7BE;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.nav-button:active {
  background: rgba(205, 231, 190, 0.2);
  transform: scale(0.95);
}

/* placeholder样式 */
.input-placeholder {
  color: rgba(205, 231, 190, 0.3);
  font-size: 30rpx;
}

/* 调整表单容器样式 */
form {
  width: 100%;
  max-width: 680rpx;
  margin: 0 auto;
}