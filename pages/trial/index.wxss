/* pages/trial/index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #181919;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  color: #FFFFFF;
}

.h1_title {
  margin-top: 10%;
  margin-left: 5%;
}

.h1_title_font {
  color: #CDE7BE;
  font-size: 25px;
  font-family: 'Gotham';
  font-style: normal;
}
.h4_title_font {
  color: #CDE7BE;
  font-size: 15px;
  font-family: 'Gotham';
  font-style: normal;
}


.weui-input {
  color: #FFFFFF;
  border: 2px solid #CDE7BE;
  border-radius: 15rpx;
  padding: 5rpx;
  width: 300px;
  height: 48px;
  box-sizing: border-box;
  margin-top: 1%;
}
.weui-input-yt {
  color: #FFFFFF;
  border: 2px solid #CDE7BE;
  border-radius: 10rpx;
  padding: 5rpx;
  width: 35%;
  height: 48px;
  box-sizing: border-box;
  margin-top: 1%;
}


.weui_input_placeholder_class{
  color: #79767c;
  padding-left: 5px;
}

.page-body {
  padding: 0 32rpx 120rpx;
  width: 100%;
  box-sizing: border-box;
  max-width: 800rpx;
  margin: 0 auto;
}

.cell__bd {
  border: 1px solid white;
}
.next_page{
  color: black;
  border: 3px solid #CDE7BE;
  width: 101px;
  height: 40px;  
  display: flex;
  justify-content:center;
  align-items: center;
  margin-top: 10%;
  background-color: #CDE7BE;
  border-radius: 10rpx;
}
.next_page_font{
  font-size: 40px;
  font-weight: bold;
  margin: auto  40px;
}


.example-image {
  width: 300rpx;
  height: 300rpx;
  border: 1px solid #ccc;
}
.call-word{
  font-size: 12px;
  font-weight: bold;
  color: #008b28;
}
.error_input_style{
  font-size: 12px;
  font-weight: bold;
  color: red;
}

.form-item {
  margin: 24rpx 32rpx;
  padding: 24rpx;
  background: rgba(205, 231, 190, 0.05);
  border-radius: 12rpx;
}

.form-label {
  font-size: 30rpx;
  color: #CDE7BE;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 32rpx;
  border: 2px solid #CDE7BE;
  border-radius: 8rpx;
  background: rgba(205, 231, 190, 0.1);
  color: #FFFFFF;
  box-sizing: border-box;
  font-size: 32rpx;
}

.form-input-half {
  width: 47%;
  height: 88rpx;
  padding: 0 32rpx;
  border: 2px solid #CDE7BE;
  border-radius: 8rpx;
  background: rgba(205, 231, 190, 0.1);
  color: #FFFFFF;
  margin-right: 3%;
  font-size: 32rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #008b28;
  margin-top: 16rpx;
  padding-left: 8rpx;
}

.error-text {
  font-size: 26rpx;
  color: #ff4d4f;
  margin-top: 12rpx;
  padding-left: 8rpx;
}

.navigation-buttons {
  display: flex;
  justify-content: space-between;
  padding: 32rpx;
  margin-top: 40rpx;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
}

.nav-button {
  font-size: 48rpx;
  color: #CDE7BE;
  padding: 20rpx 60rpx;
  background: rgba(205, 231, 190, 0.1);
  border: 2px solid #CDE7BE;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.nav-button:active {
  background: rgba(205, 231, 190, 0.2);
  transform: scale(0.95);
}

/* placeholder样式 */
.input-placeholder {
  color: rgba(205, 231, 190, 0.3);
  font-size: 30rpx;
}

/* 调整表单容器样式 */
form {
  width: 100%;
  max-width: 680rpx;
  margin: 0 auto;
}

/* 添加新的样式 */
.header {
  padding: 48rpx 32rpx;
  text-align: center;
  margin-bottom: 32rpx;
}

.main-title {
  display: block;
  color: #CDE7BE;
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.sub-title {
  color: rgba(205, 231, 190, 0.6);
  font-size: 28rpx;
  line-height: 1.5;
}

.price-card {
  background: rgba(205, 231, 190, 0.05);
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid rgba(205, 231, 190, 0.1);
  overflow: hidden;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  padding: 28rpx 32rpx;
  border-bottom: 2rpx solid rgba(205, 231, 190, 0.1);
  background: rgba(205, 231, 190, 0.02);
}

.card-title {
  color: #CDE7BE;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 2rpx solid rgba(205, 231, 190, 0.05);
  transition: background-color 0.3s ease;
}

.price-item:hover {
  background: rgba(205, 231, 190, 0.02);
}

.item-label {
  color: rgba(205, 231, 190, 0.8);
  font-size: 28rpx;
  flex: 1;
}

.item-value {
  color: #CDE7BE;
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 32rpx;
}

.price-desc {
  padding: 20rpx 32rpx;
  color: rgba(205, 231, 190, 0.6);
  font-size: 24rpx;
  background: rgba(205, 231, 190, 0.02);
  line-height: 1.5;
}

.total-card {
  background: linear-gradient(135deg, rgba(205, 231, 190, 0.15) 0%, rgba(205, 231, 190, 0.1) 100%);
  border-radius: 20rpx;
  padding: 36rpx 32rpx;
  margin: 48rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid rgba(205, 231, 190, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.total-label {
  color: #CDE7BE;
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.total-value {
  color: #CDE7BE;
  font-size: 44rpx;
  font-weight: 700;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 添加微信群相关样式 */
.join-group-section {
  padding: 0 32rpx 48rpx;
}

.join-group-card {
  background: linear-gradient(135deg, rgba(205, 231, 190, 0.15) 0%, rgba(205, 231, 190, 0.05) 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  border: 2rpx solid rgba(205, 231, 190, 0.2);
}

.join-group-content {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.join-group-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.join-group-info {
  flex: 1;
}

.join-group-title {
  display: block;
  color: #CDE7BE;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.join-group-desc {
  display: block;
  color: rgba(205, 231, 190, 0.6);
  font-size: 24rpx;
}

.join-button {
  background: #CDE7BE;
  color: #181919;
  font-size: 28rpx;
  font-weight: 500;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  border: none;
  min-width: 160rpx;
  text-align: center;
}

.join-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.join-group-features {
  display: flex;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 2rpx solid rgba(205, 231, 190, 0.1);
}

.feature-item {
  display: flex;
  align-items: center;
  color: rgba(205, 231, 190, 0.8);
  font-size: 24rpx;
}

.feature-icon {
  color: #CDE7BE;
  margin-right: 8rpx;
}

.feature-text {
  color: rgba(205, 231, 190, 0.8);
}

/* 自定义弹窗样式 */
.wx-modal-mask {
  background-color: rgba(24, 25, 25, 0.9) !important;
}

.custom-modal .wx-modal-dialog {
  background-color: #1f2020 !important;
  border: 2rpx solid rgba(205, 231, 190, 0.15) !important;
  border-radius: 20rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2) !important;
}

.custom-modal .wx-modal-title {
  color: #CDE7BE !important;
  font-weight: 600 !important;
  padding: 32rpx 32rpx 16rpx !important;
}

.custom-modal .wx-modal-content {
  color: rgba(205, 231, 190, 0.7) !important;
  padding: 16rpx 32rpx 32rpx !important;
  line-height: 1.6 !important;
  font-size: 28rpx !important;
}

.custom-modal .wx-modal-footer {
  border-top: 2rpx solid rgba(205, 231, 190, 0.1) !important;
}

.custom-modal .wx-modal-btn {
  color: rgba(205, 231, 190, 0.8) !important;
  background: rgba(205, 231, 190, 0.05) !important;
  font-size: 30rpx !important;
  line-height: 88rpx !important;
}

.custom-modal .wx-modal-btn:active {
  background: rgba(205, 231, 190, 0.1) !important;
}

.custom-modal .wx-modal-btn-primary {
  color: #181919 !important;
  background: #CDE7BE !important;
  font-weight: 500 !important;
}

.custom-modal .wx-modal-btn-primary:active {
  opacity: 0.9;
  background: #bdd4ae !important;
}