/* pages/trial/index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #181919;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  color: #FFFFFF;
}

.h1_title {
  margin-top: 10%;
  margin-left: 5%;
}

.h1_title_font {
  color: #CDE7BE;
  font-size: 25px;
  font-family: 'Gotham';
  font-style: normal;
}
.h4_title_font {
  color: #CDE7BE;
  font-size: 15px;
  font-family: 'Gotham';
  font-style: normal;
}


.weui-input {
  color: #FFFFFF;
  border: 2px solid #CDE7BE;
  border-radius: 15rpx;
  padding: 5rpx;
  width: 300px;
  height: 48px;
  box-sizing: border-box;
  margin-top: 1%;
}
.weui-input-yt {
  color: #FFFFFF;
  border: 2px solid #CDE7BE;
  border-radius: 10rpx;
  padding: 5rpx;
  width: 35%;
  height: 48px;
  box-sizing: border-box;
  margin-top: 1%;
}


.weui_input_placeholder_class{
  color: #79767c;
  padding-left: 5px;
}

.page-body {
  display: flex;
  margin-left: 10px;
  justify-content:center;
}

.cell__bd {
  border: 1px solid white;
}
.next_page{
  color: black;
  border: 3px solid #CDE7BE;
  width: 101px;
  height: 40px;  
  display: flex;
  justify-content:center;
  align-items: center;
  margin-top: 10%;
  background-color: #CDE7BE;
  border-radius: 10rpx;
}
.next_page_font{
  font-size: 40px;
  font-weight: bold;
  margin: auto  40px;
}


.example-image {
  width: 300rpx;
  height: 300rpx;
  border: 1px solid #ccc;
}
.call-word{
  font-size: 12px;
  font-weight: bold;
  color: #008b28;
}
.error_input_style{
  font-size: 12px;
  font-weight: bold;
  color: red;
}