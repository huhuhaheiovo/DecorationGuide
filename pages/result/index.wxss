page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #181919;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 32rpx;
  color: #FFFFFF;
}

.h1_title {
  margin-bottom: 48rpx;
  text-align: center;
}

.h1_title_font {
  color: #CDE7BE;
  font-size: 36rpx;
}

.svg-container {
  width: 100%;
  background: rgba(205, 231, 190, 0.1);
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx 0;
}

.total-amount {
  text-align: right;
  margin-top: 32rpx;
  padding: 24rpx;
  border-top: 2rpx solid rgba(205, 231, 190, 0.3);
}

.total-label {
  color: #CDE7BE;
  font-size: 28rpx;
}

.total-value {
  color: #CDE7BE;
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 16rpx;
}

.canvas-container {
  width: 100%;
  padding: 3rpx;
  background: rgba(205, 231, 190, 0.1);
  border-radius: 16rpx;
  margin: 32rpx 0;
}

.cost-canvas {
  width: 100%;
  height: 600px;
} 