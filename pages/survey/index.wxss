page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #181919;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 32rpx;
  color: #FFFFFF;
}

.h1_title {
  margin-bottom: 48rpx;
  text-align: center;
}

.h1_title_font {
  color: #CDE7BE;
  font-size: 36rpx;
}

.survey-form {
  width: 100%;
  max-width: 680rpx;
  margin: 0 auto;
}

.form-item {
  margin: 32rpx 0;
  padding: 24rpx;
  background: rgba(205, 231, 190, 0.05);
  border-radius: 12rpx;
  position: relative;
}

.form-label {
  font-size: 30rpx;
  color: #CDE7BE;
  margin-bottom: 24rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 32rpx;
  border: 2px solid #CDE7BE;
  border-radius: 8rpx;
  background: rgba(205, 231, 190, 0.1);
  color: #FFFFFF;
  font-size: 32rpx;
  box-sizing: border-box;
}

.unit-text {
  position: absolute;
  right: 40rpx;
  bottom: 42rpx;
  color: #CDE7BE;
  font-size: 28rpx;
}

.number-input {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid #CDE7BE;
  border-radius: 8rpx;
  background: rgba(205, 231, 190, 0.1);
  overflow: hidden;
}

.number-btn {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #CDE7BE;
  font-size: 40rpx;
  background: rgba(205, 231, 190, 0.1);
}

.number-btn.disabled {
  opacity: 0.5;
}

.number-display {
  width: 120rpx;
  height: 88rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 32rpx;
  background: transparent;
}

.next-btn {
  margin-top: 64rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #CDE7BE;
  border-radius: 8rpx;
  color: #181919;
  font-size: 32rpx;
  font-weight: 500;
}

.input-placeholder {
  color: rgba(205, 231, 190, 0.3);
}

/* 添加城市选择相关样式 */
.city-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 16rpx;
}

.city-option {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid #CDE7BE;
  border-radius: 8rpx;
  background: rgba(205, 231, 190, 0.1);
  color: #CDE7BE;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.city-option.selected {
  background: #CDE7BE;
  color: #181919;
  font-weight: 500;
}

.city-option:active {
  opacity: 0.8;
  transform: scale(0.98);
}

